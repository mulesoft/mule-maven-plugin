        <formatter.maven.plugin.version>1.9.0</formatter.maven.plugin.version>
        <build.helper.maven.plugin.version>1.8</build.helper.maven.plugin.version>

        <maven.plugin.plugin.version>3.5</maven.plugin.plugin.version>
